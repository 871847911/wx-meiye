

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}


.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}


.weui-navbar__item {
  font-size: 26rpx; 
  color: #777777;
  padding: 32rpx 0 28rpx 0;
}
.weui-navbar__item.weui-bar__item_on {
  color: #EC4B26;
}
.weui-tab__panel{
  padding-top: 132rpx;
}
.weui-navbar{
  background: #fff;
  border-bottom:1rpx solid #E8E8EC;
  border-top:1rpx solid #E8E8EC;
}
.weui-navbar__slider{
  background-color:#EC4B26;
  height:4rpx;
  border-radius:2rpx;
}
.mainBox{
  width: 100%;
  background: #fff;
  padding-bottom: 32rpx;
  margin-top: 20rpx;
  overflow: hidden;
  clear: both;
}
.boxTitle{
  width: 686rpx;
  margin: 0 auto;
  padding: 32rpx 0;
}
.img{
  width: 34rpx;
  height: 34rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 22rpx;
}
.store{
  font-size:30rpx;
  color: #1E1E1E;
  display: inline-block
}
.link{
  width: 14rpx;
  height: 26rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
}
.state{
  font-size: 26rpx;
  color: #EC4B26;
  float: right;
  vertical-align: middle;
  padding-top: 6rpx;
}
.concat{
  width: 686rpx;
  padding-bottom: 32rpx;
  background: #FAFAFA;
  margin: 0 auto;
  
}
.concatText{
  font-size: 26rpx;
  color: #1E1E1E;
  padding: 32rpx 0 0 32rpx;
}
button{
  width:156rpx;
  height:64rpx;
  border-radius:4rpx;
  background: #fff;
  font-size: 26rpx;
  line-height: 64rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  margin-top: 32rpx;
  margin-right: 32rpx;
  float: right;
}
button::after{
  border: none;
}




.bt_r{
  border:1rpx solid rgba(196,196,196,1);
  color: #777;
}
.bt_l{
  border:1rpx solid rgba(236,75,38,1);
  color: #EC4B26;
}